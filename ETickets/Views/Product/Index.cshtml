@model IEnumerable<PurchasedProduct>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Successful Purchases</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <div class="table-container">
        <h2><i class="fas fa-shopping-cart"></i> Successful Purchases</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Movie Name</th>
                    <th>User Name</th>
                    <th>Movie Price</th>
                    <th>Num Tickets</th>
                    <th>Total Price</th>
                    <th>Date of Purchase</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.MovieName</td>
                        <td>@product.ApplicatinName</td>
                        <td>@product.MoviePrice.ToString("F2")</td>
                        <td>@product.numOfTicets</td>
                        <td>@product.ProductPrice.ToString("F2")</td>
                        <td>@product.PurchaseDate.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
