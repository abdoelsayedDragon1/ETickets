@model Actor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Details</title>
   
</head>
<div class="row">
    <div class="col-12 mb-3">
        <h2><a href="/Actor/Index"><i class="bi bi-arrow-left"></i></a>Go to the Actor page</h2>
    </div>
</div>
<body>
    <div class="container mt-5">
        <div class="card p-4">
            <div class="text-center">
                <img src="~/cast/@Model.ProfilePicture" alt="Actor Image" class="actor-image">
                <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
            </div>

            <div class="actor-info">
                <h5>Biography:</h5>
                <p>@Model.Bio</p>
                </div>

                <a href="#" class="social-link btn btn-outline-primary mt-3">Follow on Social Media</a>
            </div>
        </div>
    </div>

</body>
</html>
