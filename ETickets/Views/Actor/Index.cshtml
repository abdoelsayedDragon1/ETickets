@model List<Actor>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Details</title>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-9">
                <h2>
                    <a href="/Movie/Index" class="text-decoration-none text-dark">
                        <i class="bi bi-house-door-fill"></i>
                    </a>
                    Go to the Movie page
                </h2>
            </div>
            <div class="col-3 text-end">
                <h1>All Actor</h1>
            </div>
        </div>
</head>

    <body>
        @foreach (var item in Model)
        {

            <div class="container mt-5">
                <div class="card p-3">
                    <div class="d-flex align-items-center">
                        <img src="~/cast/@item.ProfilePicture" alt="Actor Image" class="actor-image" style="width: 150px; height: auto;">
                        <div class="actor-bio">
                            <h5 class="card-title">@item.FirstName @item.LastName</h5>
                            <p class="card-title">Bio: @item.Bio</p>
                            <a href="#" class="social-link">Social media</a>
                            <a href="@Url.Action("Details", "Actor", new { Id = item.Id })" class="btn btn-primary1 mt-2" role="button">
                                Show More
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        }

    </body>
</html>
