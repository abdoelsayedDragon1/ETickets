@model Category
<div class="row">
    <div class="col-12 mb-3">
        <h2><a href="/Category/Index"><i class="bi bi-arrow-left"></i></a> Create New Category</h2>
    </div>
</div>

<div class="row">
    <form action="/Category/Create" method="post">
        <div class="mb-3">
            <label for="exampleCategoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="exampleCategoryName" name="Name" value="@Model.Name">
            <span asp-validation-for="@Model.Name"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
@section Scripts
{
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
}